<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.syahrulromadoni.bookingwarnetsr.Main2Activity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="58dp"
        android:text="Data Booking"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/namaBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:hint="Nama Booking :"
        android:inputType="textPersonName"
        android:layout_marginTop="40dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <EditText
                android:id="@+id/teksWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Waktu Booking :"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/pilihWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pillih"
                android:onClick="pilihwaktu"
                android:layout_marginLeft="20dp"/>

        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/teksTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="5dp"
                android:ems="10"
                android:hint="Tanggal Booking"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/pilihTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pillih"
                android:onClick="pilihTanggal"
                android:layout_marginLeft="20dp"/>
        </TableRow>

        <TableRow>

            <TextView />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:scrollbarSize="20dp">
            </Spinner>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/kirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="onClick_hasil"/>

</LinearLayout>
